 issn = {2377-3766, 2377-3774},
 journal = {IEEE Robotics and Automation Letters},
 keywords = {3D exploration, Motion planning},
 language = {en},
 month = {April},
 number = {2},
 pages = {1699--1706},
 title = {Efficient Autonomous Exploration Planning of Large-Scale 3-D Environments},
